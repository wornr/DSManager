        mc:Ignorable="d"
        Width="800" Height="600" Icon="/DSManager;component/Resources/Icons/app.ico" MinWidth="800" MinHeight="600" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
