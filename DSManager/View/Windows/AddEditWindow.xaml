        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Button Width="100" Content="Anuluj"/>
            <Button Grid.Column="1" Width="100" Content="Zapisz"/>
        </Grid>
    </Grid>
</mahApps:MetroWindow>
