<UserControl x:Class="DSManager.Controls.IconButton.IconButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DSManager.Controls.IconButton"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="iconBtn">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="IconButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Button Style="{StaticResource IconButtonStyle}" IsDefault="{Binding ElementName=iconBtn, Path=IsDefault}" IsCancel="{Binding ElementName=iconBtn, Path=IsCancel}">
        <WrapPanel>
            <Image Source="{Binding ElementName=iconBtn, Path=ImageSource}"/>
            <TextBlock Text="{Binding ElementName=iconBtn, Path=Text}"/>
        </WrapPanel>
    </Button>
</UserControl>
